<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="BikeRentalApp.controller.choosebike">
	<App>
		<pages>
			<Page title="Choose bike">
				<customHeader>
					<Toolbar id="navtoolbar">
						<Button icon="sap-icon://home" press="toolbarnav" app:route="dashboard"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://functional-location" press="toolbarnav" app:route="searchbike" class="currentUrl"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://customer-history" press="toolbarnav" app:route="myrides"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://hint" press="toolbarnav" app:route="information"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://quality-issue" press="toolbarnav" app:route="reportissues"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://account" press="toolbarnav" app:route="useraccount"/>
						<ToolbarSpacer/>
					</Toolbar>
				</customHeader>
				<content>
					<Page showHeader="false" enableScrolling="true">
						<content>
							<MessageStrip text="Information message" showIcon="true" id="stationStrip"/>
						</content>
						<TileContainer id="bikelist1" tiles="{/FreeBikesSet}" class="biketypetilecontainer">
							<StandardTile type="{type}" number="{BikeId}" app:bikecount="{number}" numberUnit="{numberUnit}" class="customtiles" press="tilepress"
								title="{BikeName}" info="{info}" infoState="{infoState}"/>
						</TileContainer>
					</Page>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>