<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="BikeRentalApp.controller.choosebike">
	<App>
		<pages>
			<Page title="Choose bike">
				<customHeader>
					<Toolbar id="navtoolbar">
						<Button icon="sap-icon://home" press="toolbarnav" app:route="dashboard"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://functional-location" press="toolbarnav" app:route="searchbike" class="currentUrl"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://customer-history" press="toolbarnav" app:route="myrides"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://hint" press="toolbarnav" app:route="information"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://quality-issue" press="toolbarnav" app:route="reportissues"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://account" press="toolbarnav" app:route="useraccount"/>
						<ToolbarSpacer/>
					</Toolbar>
				</customHeader>
				<content>
					<MessageStrip text="Information message" showIcon="false" id="stationStrip"/>
					<Page showHeader="false" enableScrolling="true">
						<content>
							<Select selectedItem="Element sap.ui.core.ListItem#__item1" selectedItemId="__item1" id="biketypeFilterid" class="biketypeFilter" autoAdjustWidth="true" change="_onObjectMatched" forceSelection="false" name="bike_name_filter">
								<items>
									<core:ListItem text="Choose bike type" key="item0" id="__item0"/>
									<core:ListItem text="DELUXE TOURING BIKE (BLACK) " key="item1" id="__item1"/>
									<core:ListItem text="DELUXE TOURING BIKE (SILVER) " key="item2" id="__item2"/>
									<core:ListItem text="PROFESSIONAL TOURING BIKE (BLACK)" key="item3" id="__item3"/></items>
							</Select>
							
							<List id="bikelist" items="{/FreeBikesSet}">
								<items>
									<ActionListItem text="{BikeName}" press="tilepress" />
								</items>
							</List>
						</content>
						<!--<TileContainer id="bikelist" tiles="{/FreeBikesSet}" class="biketypetilecontainer">
							<StandardTile type="{type}" number="{BikeId}" app:bikecount="{number}" numberUnit="{numberUnit}" class="customtiles" press="tilepress"
								title="{BikeName}" info="{info}" infoState="{infoState}"/>
						</TileContainer>-->
					</Page>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>