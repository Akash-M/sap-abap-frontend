<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns="sap.m" controllerName="BikeRentalApp.controller.login" displayBlock="true">
	<App id="BikeRentalApp">
		<pages>
			<Page title="{i18n>title}">
				<customHeader>
					<Toolbar id="navtoolbar">
						<Button press="nav" app:route="tariff" text="Tariff"/>
						<ToolbarSpacer/>
						<Button press="nav" app:route="registration" text="Register Here"/>
						<Button press="login" app:route="dashboard" text="Login"/>
						<Button press="connect" text="Connect"/>
					</Toolbar>	
				</customHeader>
				<content>
				<Carousel activePage="__image0" showBusyIndicator="false" busyIndicatorSize="" id="__carousel0">
				    <pages>
				    	<Image src="resources/img/carousel1.png" width="100%" height="700px" id="__image1" mode="Background"/>
				    	<Image src="resources/img/carousel2.png" width="100%" height="700px" id="__image2" mode="Background"/>
				    	<Image src="resources/img/carousel3.png" width="100%" height="700px" id="__image3" mode="Background"/>
				    	<Image src="resources/img/carousel4.png" width="100%" height="700px" id="__image4" mode="Background"/>
				    </pages>
				</Carousel>
				</content>
			<headerContent>
			</headerContent>
			</Page>
		</pages>
	</App>
</mvc:View>