<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:gmaps="openui5.googlemaps"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" xmlns="sap.m" controllerName="BikeRentalApp.controller.myrides"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="My Rides">
				<customHeader>
					<Toolbar id="navtoolbar">
						<Button icon="sap-icon://home" press="toolbarnav" app:route="dashboard"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://functional-location" press="toolbarnav" app:route="searchbike"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://customer-history" press="toolbarnav" app:route="myrides" class="currentUrl"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://hint" press="toolbarnav" app:route="information"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://quality-issue" press="toolbarnav" app:route="reportissues"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://account" press="toolbarnav" app:route="useraccount"/>
						<ToolbarSpacer/>
					</Toolbar>
				</customHeader>
				<content>
					<VBox>
						<!--<Toolbar id="currentRideToolbar">
							<ToolbarSpacer/>						
							<Button icon="sap-icon://media-play" press="onPlayBtnPress" class="playBtn"/>
							<Button icon="sap-icon://media-pause" press="onPauseBtnPress" class="pauseBtn"/>
							<Button icon="sap-icon://stop" press="onStopBtnPress" class="stopBtn"/>
						</Toolbar>-->
						<FlexBox id="btnsFlexContainer" direction="RowReverse" alignItems="Start" class="btnFlexBox">
							<items>
								<!--<Button id="ridebtn"/>-->
								<Button icon="sap-icon://stop" id="stopbtn" press="onStopBtnPress" class="stopBtn" enabled="false" lite="true"/>
								<Button icon="sap-icon://media-pause" id="pausebtn" press="onPauseBtnPress" class="pauseBtn" enabled="false"/>
								<Button icon="sap-icon://media-play" id="playBtn" press="onPlayBtnPress" class="playBtn"/>
							</items>
						</FlexBox>
						<gmaps:Map id="map1" lat="{/pastrides/0/start/lat}" lng="{/pastrides/0/start/lng}" zoom="11" zoomControl="true">
							<gmaps:markers>
								<gmaps:Marker icon="resources/img/map-marker-icon.png" path="{/pastrides/0/start}" lat="{/pastrides/0/start/lat}"
									lng="{/pastrides/0/start/lng}" info="{/pastrides/0/start/name}"/>
								<gmaps:Marker icon="resources/img/map-marker-icon.png" path="{/pastrides/0/end}" lat="{/pastrides/0/end/lat}" lng="{/pastrides/0/end/lng}"
									info="{/pastrides/0/end/name}"/>
							</gmaps:markers>
							<gmaps:polylines>
								<gmaps:Polyline path="{/pastrides/0/positions}" strokeColor="#2980b9"></gmaps:Polyline>
							</gmaps:polylines>
						</gmaps:Map>
						<List id="ProductList" items="{/pastrides}">
							<headerToolbar>
								<Toolbar>
									<content>
										<Title text="My Rides" level="H2"/>
										<ToolbarSpacer/>
									</content>
								</Toolbar>
							</headerToolbar>
							<StandardListItem title="{start/name}" description="{end/name}" icon="sap-icon://map-3" press="handlePress" detailPress="handleDetailPress"/>
						</List>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>